@model Client
<h2>Create a New Client</h2>
@using (Html.BeginForm("InsertClientToDatabase", "Client", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />
    
    <label asp-for="FullName" class="control-label">FullName</label>
    <input type="text" name="Full Name" class="form-control" value="" />
    <label asp-for="Phone" class="control-label">Phone</label>
    <input type="number" step="0.01" name="Price" class="form-control" />
    <label asp-for="Email" class="control-label">Email</label>
    <input type="text" name="Email Address" class="form-control" value="" />

    <input type="submit" value="Create Client" class="btn btn-primary" />
}
